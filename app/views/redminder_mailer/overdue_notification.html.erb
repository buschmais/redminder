<p><%= l(:redminder_mail_body) %>:</p>

<% @issues_by_project.each do |project, issues| -%>
<h3><%= project %>:</h3>
<ul>
<% issues.each do |issue| -%>
  <li><%=link_to("#{issue.tracker} ##{issue.id}: #{issue.subject}", :controller => 'issues', :action => 'show', :id => issue, :only_path => false)%></li>
<% end -%>
</ul>
<% end -%>